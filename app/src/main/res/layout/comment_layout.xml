<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="wrap_content"
>
    <com.example.neteasecloudmusic.common.CircleImageView
            android:id="@+id/avatar"
            android:layout_height="38dp"
            android:layout_width="38dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/avatar"
            android:layout_marginStart="8dp"/>
    <TextView
            android:id="@+id/userName"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@id/avatar"
            android:textColor="@color/dark_white"
            android:text="MyUserName"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:id="@+id/time"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@id/avatar"
            app:layout_constraintTop_toBottomOf="@id/userName"
            app:layout_constraintBottom_toTopOf="@id/content"
            android:textSize="10sp"
            android:textColor="@color/dark_white"
            android:text="2019年5月1日"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:id="@+id/likeNum"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:text="555"
            app:layout_constraintEnd_toStartOf="@id/likeBtn"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="4dp"/>
    <ImageButton
            android:id="@+id/likeBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toEndOf="@id/userName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/a5x"
            app:layout_constraintBottom_toTopOf="@id/content"
            app:layout_constraintHorizontal_bias="0.935"
            app:layout_constraintVertical_bias="0.578"/>
    <TextView
            android:id="@+id/content"
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/white"
            android:text="This is a comment, it is very very long long long long long long long long long."
            app:layout_constraintTop_toBottomOf="@id/avatar"/>
</android.support.constraint.ConstraintLayout>
