<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/bg"
        android:background="@color/black"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <android.support.constraint.ConstraintLayout
            android:id="@+id/what"
            android:layout_height="58dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <Button
                android:id="@+id/back_btn"
                android:layout_width="61dp"
                android:layout_height="58dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/y8"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"/>
    </android.support.constraint.ConstraintLayout>
    <com.example.neteasecloudmusic.common.RotateCircleImageView
            android:id="@+id/rotateView"
            android:layout_height="300dp"
            android:layout_width="300dp"
            app:layout_constraintTop_toBottomOf="@id/what"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="92dp"
            app:layout_constraintHorizontal_bias="0.495"/>
    <ImageButton
            android:id="@+id/comment_btn"
            android:layout_height="21dp"
            android:layout_width="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/seek"
            android:background="@drawable/a09"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.974"/>
    <TextView
            android:id="@+id/currentTime"
            android:layout_height="21dp"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:text="0:00"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/seek"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.3"
            app:layout_constraintVertical_bias="0.875"/>
    <SeekBar
            android:id="@+id/seek"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:maxHeight="4dp"
            android:minWidth="4dp"
            app:layout_constraintTop_toBottomOf="@id/rotateView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:progressDrawable="@drawable/seeker_bar"
            android:layout_marginTop="188dp"
    />
    <TextView
            android:id="@+id/totTime"
            android:layout_height="21dp"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:text="0:00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/seek"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.875"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageButton
            android:id="@+id/play"
            android:layout_height="67dp"
            android:layout_width="67dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seek"
            android:background="@drawable/agq"
    />
</android.support.constraint.ConstraintLayout>